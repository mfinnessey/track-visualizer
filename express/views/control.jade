extends layout

block content
  h1= "Control Page"
  form(action="control")
    div(class="primary-color")
      p
        strong Primary Color: 
      label(id="r0") Red
      input(type="text" id="r0", name="r0")
      label(id="g0") Green
      input(type="text" id="g0" name="g0")
      label(id="b0") Blue
      input(type="text" id="b0" name="b0")
    div(class="secondary-color")
      p
        strong Secondary Color: 
      label(id="r1") Red
      input(type="text" id="r1", name="r1")
      label(id="g1") Green
      input(type="text" id="g1" name="g1")
      label(id="b1") Blue
      input(type="text" id="b1" name="b1")
    p
      Spotify Sync
    input(type="checkbox" name="spotify_sync")
    p
      BPM
    input(type="text" name="bpm")
    select(name="effect")
      option(value="bpm_pulse") BPM Pulse
      option(value="two_color_cycle") Two Color Cycle
      option(value="snake") Snake
      option(value="solid_color") Solid Color
      option(value="rainbow_solid") Rainbow Solid
      option(value="rainbow_rotate") Rainbow Rotate
    input(type="submit" value="Update")

